# installs for my void linux setup
# niru.pm

# firmare if needed
# 11th gen intel cpu or newer fix audio etc
sudo xbps-install sof-firmware 

# editors etc
sudo xbps-install vim nano git wget

# suckless dwm etc dep
sudo xbps-install base-devel libX11-devel libXft-devel libXinerama-devel freetype-devel fontconfig-devel xorg nitrogen picom alsa-utils

# laptop
brightnessctl

# suckless slock dep
sudo xbps-install imlib2-devel libXrandr-devel

# fonts
sudo xbps-install nerd-fonts-ttf google-fonts-ttf

# browser and mail
sudo xbps-install firefox aerc
sudo xbps-install thunderbird

# gui stuff
sudo xbps-install lxappearance arc-theme arc-icon-theme pcmanfm

# pass crypt
sudo xbps-install gnupg pass

# more apps
sudo xbps-install bluefish filezilla gimp cmus mpv kdenlive breeze nextcloud-client sxiv

# ohmybash
bash -c "$(wget https://raw.githubusercontent.com/ohmybash/oh-my-bash/master/tools/install.sh -O -)"
